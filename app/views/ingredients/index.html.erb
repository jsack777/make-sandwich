<h1>Listing ingredients</h1>

<table class="table-condensed table-hover">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ingredients.each do |ingredient| %>
  <tr>
    <td><%= ingredient.name %></td>
    <td><%= link_to '', ingredient, class: "icon-search" %></td>
    <td><%= link_to '', edit_ingredient_path(ingredient), class: "icon-pencil" %></td>
    <td><%= link_to '', ingredient, class: "icon-trash", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Ingredient', new_ingredient_path %>
