<h1>Listing containers</h1>

<table class="table-condensed table-hover">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @containers.each do |container| %>
  <tr>
    <td><%= container.name %></td>
    <td><%= link_to '', container, class: "icon-search" %></td>
    <td><%= link_to '', edit_container_path(container), class: "icon-pencil" %></td>
    <td><%= link_to '', container, class: "icon-trash", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Container', new_container_path %>
